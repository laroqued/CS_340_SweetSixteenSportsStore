<br>
      <div>   
          <a  type="button" class="btn btn-dark btn-xs"  href="/">Home</a>
          </div><br>
<div class="row">
<div class="col-6"><h1>Purchases</h1></div>
<div class="col-6 d-flex justify-content-end">
  <a href="/addPurchase" type="button" class="btn btn-primary align-self-center">+ add purchase</a>
</div>

</div>
      <form class="d-flex" method="POST" action="purchases" novalidate >
        <input class="form-control me-2" type="search" placeholder="Search Purchases by Purchase Id" name="search" aria-label="Search">
        <button class="btn btn-dark" type="submit">Search</button>
      </form><br><br>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
            <th scope="col">Purchase ID</th>
            <th scope="col">Product ID</th>
            <th scope="col">Purchase Date</th>
            <th scope="col">Cost</th>
            <th scope="col">Payment Date</th>
            <th scope="col">Item Received</th>
            <th scope="col"  class="text-end">View/Edit/Delete</th>
  
    </tr>
  </thead>
  <tbody>
    {{!-- {{rows}} come from the query customerController.js this.columnName --}}
{{#each rows}} 
    <tr>
            <th scope="row">{{this.purchase_id}}</th>
            <th>{{this.product_id}}</th>
            <td>{{this.purchase_date}}</td>
            <td>{{this.cost}}</td>
            <td>{{this.payment_date}}</td>
            <td>{{this.item_received}}</td>
      <td class="text-end">
        <a href="/viewPurchase/{{this.purchase_id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-eye"></i> View</a>
          <a href="/editPurchase/{{this.purchase_id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i> Edit</a>
          <a href="/deletePurchase/{{this.purchase_id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i> Delete</a>
      </td>
    </tr>
    {{/each}}


  </tbody>
</table>